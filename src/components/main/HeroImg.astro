---
import { Image } from 'astro:assets';
import bg from '../../../public/img/placeholder/bg.avif';
---

<section class='hero'>
  <div class='gradient-scrim'></div>
  <Image src={bg} class='hero-img' alt='Placeholder Image' />
  <div class='container'>
    <h1>Hero h1</h1>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100svh;
  }

  .gradient-scrim {
    z-index: 2;
    pointer-events: none;
    background-image: linear-gradient(#0d0a08cc, #0d0a0800 39%, #0d0a08e6 80%);
    position: absolute;
    inset: 0%;
    /* NOTE good grad for covering top nav and bottom text; https://t3.tech */
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    z-index: 1;
  }

  h1 {
    color: rgb(200, 200, 200);
  }
</style>
