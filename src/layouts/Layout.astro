---
interface Props {
  title: string;
  metaTitle?: string;
  metaDescription?: string;
  ogTitle?: string;
  canonical?: string;
}

const { title, metaDescription, ogTitle, canonical } = Astro.props;
---

<!doctype html>
<html lang='sr'>
  <head>
    <!-- Google tag (gtag.js)-->
    <script async src='https://www.googletagmanager.com/gtag/js?id=G-1GQQ4BKH76'></script>
    <script>
      // @ts-nocheck
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-1GQQ4BKH76');
    </script>

    <title>{title}</title>

    <!-- META -->
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='title' content={title} />
    <meta name='description' content={metaDescription} />

    <meta property='og:url' content={canonical} />

    <!-- OG -->
    <meta property='og:site_name' content='' />
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:image' content='' />
    <meta property='og:image' content='https://slepsluzba-surcin.rs/img/og-img.jpg' />
    <meta property='og:title' content={ogTitle} />
    <meta property='og:description' content={metaDescription} />
    <meta property='og:image:width' content='1200' />
    <meta property='og:image:height' content='630' />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://slepsluzba-surcin.rs/img/og-img.jpg' />

    <!-- FAVICON -->
    <link rel='icon' type='image/png' href='/img/favicon/favicon-96x96.png' sizes='96x96' />
    <link rel='icon' type='image/svg+xml' href='/img/favicon/favicon.svg' />
    <link rel='shortcut icon' href='/img/favicon/favicon.ico' />
    <link rel='apple-touch-icon' sizes='180x180' href='/img/favicon/apple-touch-icon.png' />
    <meta name='apple-mobile-web-app-title' content='' />
    <link rel='manifest' href='/img/favicon/site.webmanifest' />

    <link rel='canonical' href={canonical} />

    <link rel='preload' href='/fonts/Inter/InterVariable.woff2' as='font' type='font/woff2' crossorigin='anonymous' />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    /* color: var(--text-primary); */
    background: var(--bg);
    scroll-behavior: smooth;
  }

  section {
    overflow-x: hidden;
  }

  :root {
    /* Color palette - name by use case */
    --bg: rgb(252, 255, 250);
    --primary: rgb(253, 245, 103);
    --text-header: #000000;
    --text-body: var(--text-700);

    --primary-50: hsl(60, 100%, 95%);
    --primary-100: hsl(60, 95%, 90%);
    --primary-200: hsl(60, 90%, 85%);
    --primary-300: hsl(60, 85%, 80%);
    --primary-400: hsl(60, 92%, 75%);
    --primary-500: hsl(60, 92%, 70%);
    --primary-600: hsl(60, 85%, 60%);
    --primary-700: hsl(60, 80%, 50%);
    --primary-800: hsl(60, 90%, 40%);
    --primary-900: hsl(60, 95%, 30%);

    --text-50: hsl(0, 0%, 98%);
    --text-100: hsl(0, 0%, 95%);
    --text-200: hsl(0, 0%, 90%);
    --text-300: hsl(0, 0%, 80%);
    --text-400: hsl(0, 0%, 65%);
    --text-500: hsl(0, 0%, 50%);
    --text-600: hsl(0, 0%, 40%);
    --text-700: hsl(0, 0%, 30%);
    --text-800: hsl(0, 0%, 20%);
    --text-900: hsl(0, 0%, 10%);

    /* Responsive font sizes */
    --fs-100: clamp(0.75rem, 2vw + 0.25rem, 0.875rem); /* + rem is for users zooming */
    --fs-200: clamp(0.875rem, 2.5vw + 0.5rem, 1rem);
    --fs-300: clamp(1rem, 2.75vw + 0.65rem, 1.125rem);
    --fs-400: clamp(1.125rem, 3vw + 0.5rem, 1.25rem);
    --fs-500: clamp(1.375rem, 4vw + 0.75rem, 1.75rem);
    --fs-600: clamp(1.75rem, 5vw + 0.75rem, 2.5rem);
    --fs-700: clamp(2.25rem, 7vw + 0.75rem, 3.5rem);
    --fs-800: clamp(2.75rem, 8.5vw + 0.75rem, 4.25rem);
    --fs-900: clamp(3rem, 10vw + 1rem, 5rem);

    /* Spacing/Padding Scale */
    --space-100: clamp(0.25rem, 0.5vw, 0.5rem);
    --space-200: clamp(0.5rem, 1vw, 0.75rem);
    --space-300: clamp(0.75rem, 1.5vw, 1rem);
    --space-400: clamp(1rem, 2vw, 1.5rem);
    --space-500: clamp(1.5rem, 3vw, 2rem);
    --space-600: clamp(2rem, 4vw, 3rem);
    --space-700: clamp(3rem, 6vw, 4rem);
    --space-800: clamp(4rem, 8vw, 6rem);

    /* Section Spacing */
    --section-spacing-sm: clamp(0.75rem, 2vw, 1rem);
    --section-spacing-md: clamp(2rem, 4vw, 4rem);
    --section-spacing-lg: clamp(4rem, 8vw, 7.5rem);
    --section-spacing-xl: clamp(6rem, 12vw, 12rem);
    --section-spacing-xxl: clamp(8rem, 16vw, 16rem);
    --section-spacing-xxxl: clamp(10rem, 18vw, 18rem);

    /* Should be modified per project */

    --x-spacing-desktop: var(--section-spacing-xxxl);
    --x-spacing-tablet: var(--section-spacing-lg);
    --x-spacing-mobile: var(--section-spacing-sm);

    --y-spacing-desktop: var(--section-spacing-xl);
    --y-spacing-tablet: var(--section-spacing-lg);
    --y-spacing-mobile: var(--section-spacing-xl);

    --section-spacing-full-desktop: var(--y-spacing-desktop) var(--x-spacing-desktop);
    --section-spacing-full-tablet: var(--y-spacing-tablet) var(--x-spacing-tablet);
    --section-spacing-full-mobile: var(--y-spacing-mobile) var(--x-spacing-mobile);
    --section-spacing-top-desktop: var(--section-spacing-lg) var(--x-spacing-desktop) 0 var(--x-spacing-desktop);
    --section-spacing-top-tablet: var(--section-spacing-md) var(--x-spacing-tablet) 0 var(--x-spacing-tablet);
    --section-spacing-top-mobile: var(--section-spacing-sm) var(--x-spacing-mobile) 0 var(--x-spacing-mobile);
    --section-spacing-bottom-desktop: 0 var(--x-spacing-desktop) var(--section-spacing-lg) var(--x-spacing-desktop);
    --section-spacing-bottom-tablet: 0 var(--x-spacing-tablet) var(--section-spacing-md) var(--x-spacing-tablet);
    --section-spacing-bottom-mobile: 0 var(--x-spacing-mobile) var(--section-spacing-sm) var(--x-spacing-mobile);

    --container-spacing: clamp(1rem, 3vw, 2rem); /* Consistent edge spacing */

    /* Border Radius */
    --rounded-xsm: 0.125rem;
    --rounded-sm: 0.25rem;
    --rounded-md: 0.375rem;
    --rounded-lg: 0.5rem;
    --rounded-xl: 0.75rem;
    --rounded-2xl: 1rem;
    --rounded-3xl: 1.5rem;
    --rounded-full: 9999px;

    font-family: 'Inter', sans-serif;
    font-feature-settings:
      'liga' 1,
      'calt' 1; /* fix for Chrome */
    scroll-behavior: smooth;
  }

  h1,
  h2,
  h3 {
    line-height: 1.2;
    margin: 0;
    position: relative;
    z-index: 15;
  }

  h1 {
    font-size: var(--fs-700);
    font-weight: 600;
    margin-bottom: 24px;
    text-transform: capitalize;
  }

  h2 {
    color: var(--text-header);
    font-size: var(--fs-700);
    font-weight: 400;
  }

  p {
    font-size: var(--fs-200);
    color: var(--text-body);
  }

  section {
    scroll-margin-top: var(--space-700);
  }
  @font-face {
    font-family: 'Inter';
    font-weight: 100 900;
    font-style: oblique 0deg 10deg;
    src:
      url('/fonts/Inter/InterVariable.woff2') format('woff2 supports variations'),
      url('/fonts/Inter/InterVariable.woff2') format('woff2-variations'),
      url('/fonts/Inter/InterVariable.woff2') format('woff2');
  }

  @media (max-width: 768px) {
    :root {
      section {
        flex-direction: column;
        scroll-margin-top: var(--space-800);
      }

      h1 {
        margin-bottom: 16px;
      }
    }
  }
</style>
